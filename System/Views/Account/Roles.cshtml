@model IEnumerable<System.Models.Identity.ViewRole>
@{
     ViewBag.Title = "Уровни доступа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Role_Create", "Account", FormMethod.Post, new { @class = "form-inline" }))
{
<div class="form-group">
    <label for="roleName">Name</label>
    @*<input type="text" class="form-control" id="roleName" placeholder="text"/>*@
    @Html.TextBox("roleName", "" ,new { @class = "form-control" })
</div>
<button type="submit" class="btn btn-default">Создать</button>
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>


        @foreach (var role in Model)
            {
        <tr>
            <td></td>
            <td>@role.Name</td>
        </tr>
            }


    </tbody>
</table>

